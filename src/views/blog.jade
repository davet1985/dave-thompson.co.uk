extends layout
block content
  .row.main.blog.section(id='blog')
    .small-12.columns
      .row
        .smal-12.large-9.columns
          .row
            .small-12.columns
              h2.blog-title #{post.title}
              .blog-sub-title Post by 
                strong #{post.author} 
                | on 
                strong #{post.date}
            .small-12.columns
              .blog-body
                | !{post.content}
        .smal-12.large-3.columns
          .blog-archive
            .title Archive
            for year in index.years
              .year #{year.title}
              ul
                for post in year.posts
                  li
                    a(href='/blog/#{post.slug}') #{post.title}
